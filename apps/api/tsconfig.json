{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "types": ["node"],
    "paths": {
      "@db/*": ["../../db/*"],
      "@utils/*": ["src/utils/*"],
      "@services/*": ["src/services/*"],
      "@routes/*": ["src/routes/*"],
      "@types/*": ["src/types/*"]
    }
  },
  "include": ["src"]
}
